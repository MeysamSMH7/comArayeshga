<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.bbs.bbs">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".classes.BaseActivity"
        android:allowBackup="true"
        android:icon="@drawable/logobbs"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logobbs"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".Activity_Splash__BBS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_Main_BBS"
            android:label="@string/title_activity__main__bbs"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activity_Reserve_BBS" />
        <activity android:name=".Activity_RegisterEdit_BBS" />
        <activity android:name=".Activity_Login_BBS" />
        <activity android:name=".Activity_ReserveShow_BBS" />
        <activity android:name=".Activity_AboutUs_BBS"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linerMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="7dp">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgBarber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/barbershop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="سالن"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/home_dis" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:gravity="center"
                        android:text="خونه"
                        android:textColor="@color/white" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerSalon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/bg_greywhite_corner">

                    <TextView
                        android:id="@+id/txtChooseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:text="انتخاب تاریخ"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/bg_greywhite_corner"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="انتخاب ساعت"
                        android:textColor="@color/white" />

                    <Spinner
                        android:id="@+id/spnRangeTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/bg_greywhite_corner">

                    <TextView
                        android:id="@+id/txtChooseDateHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:text="انتخاب تاریخ"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/bg_greywhite_corner"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="انتخاب ساعت"
                        android:textColor="@color/white" />

                    <Spinner
                        android:id="@+id/spnRangeTimeHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/bg_greywhite_corner"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="آدرس فعلی شما:"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtShowLastAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="در حال حاضر شما هیچ آدرس ثبت شده ای ندارید"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/bg_greywhite_corner"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtLastAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:text="انتخاب آدرس های قبلی (درصورت نیاز):"
                        android:textColor="@color/colorWhite" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TIatcSearchAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:hint="انتخاب آدرس های قبلی"
                        android:textColorHint="@color/colorWhite"
                        android:visibility="gone"
                        app:backgroundTint="@color/colorWhite">

                        <AutoCompleteTextView
                            android:id="@+id/atcSearchAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:gravity="right"
                            android:inputType="textPersonName"
                            android:paddingRight="7dp"
                            android:textColor="@color/colorWhite"
                            android:textCursorDrawable="@color/colorWhite" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/txtChooseAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:text="انتخاب آدرس های قبلی"
                        android:textColor="@color/colorWhite"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/spinnerChooseAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <CheckBox
                        android:id="@+id/chkNewAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="آدرس جدید"
                        android:textColor="@color/white" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/TIedtNewAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNullL"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:hint="آدرس خود را وارد کنید"
                        android:textColorHint="@color/colorWhite"
                        android:visibility="gone"
                        app:backgroundTint="@color/colorWhite">

                        <EditText
                            android:id="@+id/edtNewAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorWhite"
                            android:gravity="right"
                            android:inputType="textPersonName"
                            android:paddingRight="7dp"
                            android:textColor="@color/colorWhite"
                            android:textCursorDrawable="@color/colorWhite" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

            </LinearLayout>

            <com.example.myloadingbutton.MyLoadingButton
                android:id="@+id/btnSubmitReserve"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                app:mlb_animationDuration="300"
                app:mlb_backgroundColor="@color/view_color_gray"
                app:mlb_label="ثبت رزرو"
                app:mlb_labelColor="@color/colorAccent"
                app:mlb_loaderColor="@color/colorWhite"
                app:mlb_setDoneIcon="@drawable/ic_progress_done"
                app:mlb_setErrorIcon="@drawable/ic_progress_cancle"
                app:mlb_setNormalAfterError="false" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>